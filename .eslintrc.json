{
  "extends": [
    "react-app",
    "react-app/jest"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json",
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "@typescript-eslint/prefer-optional-chain": "warn",
    "@typescript-eslint/no-redundant-type-constituents": "warn"
  },
  "overrides": [
    {
      "files": ["**/*.ts", "**/*.tsx"]
    }
  ]
}
