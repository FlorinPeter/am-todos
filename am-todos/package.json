{
  "name": "am-todos",
  "version": "0.1.0",
  "description": "AI-powered todo application that transforms GitHub repositories into intelligent task management systems",
  "license": "Apache-2.0",
  "author": "Agentic Markdown Todos Contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/am-todos.git"
  },
  "keywords": [
    "todo",
    "markdown",
    "ai",
    "github",
    "task-management",
    "react",
    "typescript"
  ],
  "private": true,
  "proxy": "http://localhost:3001",
  "dependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.126",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "autoprefixer": "^10.4.21",
    "js-yaml": "^4.1.0",
    "postcss": "^8.5.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-markdown": "^10.1.0",
    "react-scripts": "5.0.1",
    "remark-gfm": "^4.0.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "DANGEROUSLY_DISABLE_HOST_CHECK=true react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:basic": "react-scripts test --testPathPattern='(FeatureValidation|ComponentBasics)\\.test\\.(ts|tsx)' --watchAll=false",
    "test:integration": "INTEGRATION_TEST=true react-scripts test --testPathPattern=githubService.test.ts --watchAll=false",
    "test:github": "INTEGRATION_TEST=true react-scripts test --testPathPattern=githubService.test.ts --watchAll=false",
    "test:retry": "INTEGRATION_TEST=true react-scripts test --testPathPattern=retryLogic.test.ts --watchAll=false",
    "test:github-basic": "node test-github-integration.js",
    "test:github-stress": "node test-stress-github.js",
    "test:last-file": "node test-last-file-deletion.js",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/user-event": "^14.6.1",
    "@types/js-yaml": "^4.0.9",
    "cross-fetch": "^4.1.0",
    "node-fetch": "^3.3.2"
  }
}
